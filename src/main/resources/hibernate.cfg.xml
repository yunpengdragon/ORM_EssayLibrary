<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		 
		<property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:~/data/orm_essay_hibernate</property>
        <!--  
        <property name="hibernate.connection.username">essay</property>
        <property name="hibernate.connection.password">essay</property>
        -->
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.format_sql">true</property>
		<property name="show_sql">true</property>
		<mapping class="com.library.essay.persistence.entities.Essay"></mapping>
		<mapping class="com.library.essay.persistence.entities.User"></mapping>
		<mapping class="com.library.essay.persistence.entities.UserRole"></mapping>
		
	</session-factory>
</hibernate-configuration>
